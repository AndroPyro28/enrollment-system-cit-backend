generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  student // learner
  teacher
  admin
}

enum Gender {
  male
  female
  other
}

enum Semester {
  first
  second
}

enum AddressType {
  current
  permanent
}

model User {
  id            String    @id @default(cuid())
  name          String? // Oauth
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  is_principal Boolean? @default(false)

  hashedPassword String?

  accounts Account[]
  sessions Session[]

  profile Profile?

  role Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id String @id @default(cuid())

  school_year           String? // e.g. 2021-2022
  grade_level_to_enroll Int?
  is_with_lrn           Boolean?
  is_returnee           Boolean? // balik aral

  // 
  // LEARNER INFORMATION
  // 
  psa_birth_cert_no String?
  lrn_no            String? // learner reference number

  first_name  String
  last_name   String
  middle_name String
  extension   String?
  dob         DateTime // date of birth
  gender      Gender
  age         Int

  place_of_birth String? // municipality/city
  mother_tongue  String?

  is_pc    Boolean? // belonging to any IP community/Indigenous cultural community 
  ipc_name String? // name of IP community

  is_4ps           Boolean?
  household_id_4ps String? // 4ps household id number

  is_pwd       Boolean? // person with disability
  disabilities Disability[]

  is_same_address Boolean?
  address         Address[]

  guardians Guardian[]

  // FOR RETURNING STUDENTS / TRANSFEREES 
  last_grade_level_complete String?
  last_school_year_complete String?
  last_school_attended      String?
  school_id                 String?

  // FOR LEARNER IN SENIOR HIGH SCHOOL
  semester Semester?
  track    String?
  strand   String?

  //  STUDENT PREFFERED LEARNING MODALITY
  preferred_learning_modalities LearningModality[]

  // DOCUMENTS
  form137_url String?
  form137_id  String?

  birth_cert_url String?
  birth_cert_id  String?

  card_url String?
  card_id  String?

  application_form_url String?
  application_form_id  String?

  // 1x1 picture
  picture_url String?
  picture_id  String?

  // QR CODE
  // qr code contains the student's information (name , school year , year level , section )
  qr_code_url String?
  qr_code_id  String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  section   Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId String

  yearLevel   YearLevel @relation(fields: [yearLevelId], references: [id], onDelete: Cascade)
  yearLevelId String

  @@index([userId])
}

model Section {
  id          String    @id @default(cuid())
  name        String
  yearLevel   YearLevel @relation(fields: [yearLevelId], references: [id], onDelete: Cascade)
  yearLevelId String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Profile   Profile[]
}

model YearLevel {
  id       String    @id @default(cuid())
  name     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Profile   Profile[]
  sections Section[]

}

model Disability {
  id String @id @default(cuid())

  name    String
  student Profile[]

  registrationForm RegistrationForm[]
}

model LearningModality {
  id String @id @default(cuid())

  name    String
  student Profile[]

  registrationForm RegistrationForm[]
}

model Address {
  id String @id @default(cuid())

  house_no     String
  street_name  String
  brgy         String
  municipality String
  province     String
  country      String
  zip_code     String

  type AddressType @default(current)

  student Profile[]

  registrationForm RegistrationForm[]
}

model Guardian {
  id String @id @default(cuid())

  first_name  String
  last_name   String
  middle_name String
  contact_no  String

  students Profile[]

  registrationForm RegistrationForm[]
}

